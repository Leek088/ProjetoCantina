<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto Cantina</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/lib/feather/feather.css">
    <link rel="stylesheet" href="~/lib/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/lib/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/css/vendor.bundle.base.css">
    <!-- endinject -->
    @if (ViewBag.EnableDataTables != null)
    {
        <!-- Plugin css for this page -->
        <link rel="stylesheet" href="~/lib/datatables.net-bs4/dataTables.bootstrap4.css">
        <link rel="stylesheet" type="text/css" href="~/js/select.dataTables.min.css">
        <!-- End plugin css for this page -->
    }
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />

    @*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoCantina.WEB.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <div class="container-scroller">
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" href="index.html"><img src="~/images/logo.png" class="mr-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/images/logo-mini.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a menu="menu_inicio" class="nav-link" asp-action="Index" asp-controller="Home">
                            <i class="ti-home menu-icon"></i>
                            <span class="menu-title">Inicio</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#produto" aria-expanded="false" aria-controls="produto">
                            <i class="ti-package menu-icon"></i>
                            <span class="menu-title">Produtos</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="produto">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" menu="menu_categoria" asp-action="Index" asp-controller="Categoria">Categorias</a></li>
                                <li class="nav-item"> <a class="nav-link" menu="menu_produto" asp-action="Index" asp-controller="Produto">Produtos</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#usuario" aria-expanded="false" aria-controls="usuario">
                            <i class="icon-head menu-icon"></i>
                            <span class="menu-title">Usuarios</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="usuario">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" menu="menu_usuario" asp-action="Index" asp-controller="Usuario">Usuario</a></li>
                                <li class="nav-item"> <a class="nav-link" menu="menu_account" asp-action="Login" asp-controller="Account">Login</a></li>
                            </ul>
                        </div>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#fluxoCaixa" aria-expanded="false" aria-controls="fluxoCaixa">
                            <i class=" mdi mdi-cart-outline menu-icon"></i>
                            <span class="menu-title">Financeiro</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="fluxoCaixa">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" menu="menu_caixa" asp-action="Index" asp-controller="Caixa">Caixa</a></li>
                            </ul>
                        </div>
                    </li>                    
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                    <!-- main-panel ends -->
                </div>
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2024.  Template para um projeto de teste.</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Boa dedicação e feito com <i class="ti-heart text-danger ml-1"></i></span>
                    </div>
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Distribuido por <a href="https://www.linkedin.com/in/leeko88/" target="_blank">Leeko88</a></span>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <!-- plugins:js -->
    <script src="~/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    @if (ViewBag.EnableDataTables != null)
    {
        <!-- Plugin js for this page -->
        <script src="~/lib/datatables.net/jquery.dataTables.js"></script>
        <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.js"></script>
        <script src="~/js/dataTables.select.min.js"></script>
        <!-- End plugin js for this page -->
    }
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/template.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <!-- endinject -->
    @if (ViewBag.HomeIndex != null)
    {
        <!-- Custom js for this page-->
        <script src="~/js/dashboard.js"></script>
    }
    <!-- End custom js for this page-->
    @if (ViewBag.HabilitarNotificacao != null)
    {
        <script src="~/lib/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/notificacao.js"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
