@model CategoriaViewModel

@{
    ViewData["Title"] = "Categoria";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deletar categoria</h4>
                <p class="card-description text-danger">
                    Deseja deletar a categoria abaixo?
                </p>
                <form id="form" asp-action="Deletar" asp-controller="Categoria" method="post" class="forms-sample">
                    <div hidden class="form-group">
                        <label asp-for="CategoriaID"></label>
                        <input asp-for="CategoriaID" class="form-control col-6" placeholder="ID da categoria" />
                        <span asp-validation-for="CategoriaID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input readonly asp-for="Nome" class="form-control col-6" placeholder="Nome da categoria" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataCadastro"></label>
                        <input readonly asp-for="DataCadastro" class="form-control col-6" placeholder="Data do cadastro" />
                        <span asp-validation-for="DataCadastro" class="text-danger"></span>
                    </div>
                    <button id="buttonCadastrar" type="submit" class="btn btn-danger mr-2">Deletar</button>
                    <a asp-action="Index" asp-controller="Categoria" class="btn btn-warning">Voltar</a>
                </form>
                <div class="row p-1 alert">
                    <div id="messagesList" class="col-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
