@model CategoriaViewModel

@{
    ViewData["Title"] = "Categoria";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Cadastro de categoria</h4>
                <p class="card-description">
                    Complete o campo abaixo
                </p>
                <form id="form" asp-action="Adicionar" asp-controller="Categoria" method="post" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control col-6" placeholder="Nome da categoria" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>                    
                    <button id="buttonCadastrar" type="submit" class="btn btn-primary mr-2">Cadastrar</button>
                    <a asp-action="Index" asp-controller="Categoria" class="btn btn-warning">Voltar</a>
                </form>
                <div class="row p-1 alert">
                    <div id="messagesList" class="col-6">                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>