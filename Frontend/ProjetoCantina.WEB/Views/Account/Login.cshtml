@model UsuarioViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-5 mx-auto">
            <div class="auth-form-light text-left py-4 px-3 px-sm-4">
                <div class="brand-logo">
                    <img src="~/images/logo.png" alt="logo">
                </div>
                <h4>Olá, vamos começar?</h4>
                <h6 class="font-weight-light">Logue-se para continuar.</h6>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" asp-action="Login" asp-controller="Account" class="pt-3">
                    <div class="form-group">
                        <input asp-for="NomeUsuario" class="form-control form-control-lg" placeholder="Usuário" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Senha" class="form-control form-control-lg" placeholder="Senha" />
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Entrar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>