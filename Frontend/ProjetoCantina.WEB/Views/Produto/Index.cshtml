@model IEnumerable<ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <h4 class="card-title">Produtos</h4>
                        <p class="card-description">
                            Produtos existentes
                        </p>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 text-right">
                        <a asp-action="Adicionar" asp-controller="Produto" type="button" class="btn btn-primary">Cadastrar novo</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Codigo Barras
                                </th>
                                <th>
                                    Estoque
                                </th>
                                <th>
                                    Opção
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var produto in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        @Html.DisplayFor(modelItem => produto.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => produto.CodigoBarras)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => produto.Estoque)
                                    </td>
                                    <td>
                                        <a asp-route-id="@produto.ProdutoID" asp-action="Editar" asp-controller="Produto"><i class="mdi mdi-grease-pencil"></i></a>&nbsp;|&nbsp;
                                        <a asp-route-id="@produto.ProdutoID" asp-action="Deletar" asp-controller="Produto"><i class="mdi mdi-cup-off"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>